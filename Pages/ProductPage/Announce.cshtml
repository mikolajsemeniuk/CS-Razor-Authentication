@page
@model ProductPage.AnnounceModel

<h1 class="text-info">
    Add Announce
</h1>


<form method="post" enctype="multipart/form-data" role="form">
    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="@Model.Product.Name"></label>
        <div class="col-md-10">
            <input asp-for="@Model.Product.Name" class="form-control" />
        </div>
    </div>
        <div class="form-group">
        <label asp-for="@Model.Product.Price"></label>
        <div class="col-md-10">
            <input asp-for="@Model.Product.Price" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Product.Category"></label>
        <div class="col-md-10">
            <select asp-for="@Model.Product.Category">
                <option value=0>Pants</option>
                <option value=1>Shirts</option>
                <option value=2>Shoes</option>
                <option value=3>Underwear</option>
                <option value=4>Sweatshirts</option>
                <option value=4>Jackets</option>
                <option value=6>Sportswear</option>
                <option value=7>Dresses</option>
                <option value=8>Skirts</option>
                <option value=9>Other</option>
            </select>
        </div>
        <div class="form-group">
        <label asp-for="@Model.Product.Size"></label>
        <div class="col-md-10">
            <select asp-for="@Model.Product.Size">
                <option value=0>XS</option>
                <option value=1>S</option>
                <option value=2>M</option>
                <option value=3>L</option>
                <option value=4>XL</option>
                <option value=5>XXL</option>
            </select>
        </div>
    </div>
        <div class="form-group">
        <label asp-for="@Model.Product.Color"></label>
        <div class="col-md-10">
            <select asp-for="@Model.Product.Color">
                <option value=0>White</option>
                <option value=1>Red</option>
                <option value=2>Green</option>
                <option value=3>Blue</option>
                <option value=4>Yellow</option>
                <option value=5>Beige</option>
                <option value=6>Purple</option>
                <option value=7>Pink</option>
                <option value=8>Black</option>
                <option value=9>Gray</option>
            </select>
        </div>
    </div>

    <div class="form-group">
         <label asp-for="@Model.Product.Description"></label>
         @Html.TextAreaFor(model => model.Product.Description, new { @class = "form-control", @rows = 4 })

    </div>
    
        <div class="form-group">
            <label asp-for="@Model.Product.Image" class="control-label"></label>
            <input type="file" name="files" class="form-control" />

        </div>
        
    <div class="form-group">
        <div class="col-md-2">
            <button type="submit" class="mt-3 btn btn-success form-control">Add</button>
        </div>
    </div>
</form>